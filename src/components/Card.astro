---
import Profile from "./Profile.astro";
import Thumbnail from "./Thumbnail.astro";

export interface Props {
	author: {
		imageProfile: string;
		name: string;
		specialist: string;
	};
	slug: string;
	title: string;
	description: string;
	published: string;
	category: string;
	thumbnail: string;
}

const { author, slug, title, description, published, category, thumbnail } =
	Astro.props as Props;
---

<a href={`/posts/${slug}`}>
	<section
		class="pb-9 border-b border-[#FFFFFF1A] last:border-none md:border-none"
	>
		<Thumbnail
			thumbnail={thumbnail}
			published={published}
			category={category}
		/>

		<div class="space-y-2.5 mb-5">
			<h1 class="text-2xl">{title}</h1>
			<p class="opacity-60">
				{
					description.length > 190
						? description.slice(0, 190) + "..."
						: description
				}
			</p>
		</div>

		<Profile
			imageProfile={author.imageProfile}
			name={author.name}
			specialist={author.specialist}
		/>
	</section>
</a>
