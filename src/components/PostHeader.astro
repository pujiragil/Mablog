---
import Profile from "./Profile.astro"

const { author } = Astro.props
---

<div class="xl:container mx-auto p-8">
  <div class="flex flex-col justify-center items-center text-center">
    <p class="flex items-center gap-x-3 opacity-60">UI Design <span class="w-1.5 h-1.5 rounded-full bg-white"></span> July 2, 2022</p>
    <h1 class="mt-2.5 mb-8 text-2xl">Understanding color theory: the color wheel and finding complementary colors</h1>

    <Profile imageProfile={author.imageProfile} name={author.name} specialist={author.specialist} />
  </div>
</div>